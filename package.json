{
  "name": "@growlerapp/webapp",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "start": "npm run serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "test:unit": "vue-cli-service test:unit",
    "generate-icons": "icon-font-generator icons/svg/*.svg -o public/icons --prefix ico --csstp icons/css.hbs --htmltp icons/html.hbs --fontspath ./"
  },
  "dependencies": {
    "apollo-cache-inmemory": "^1.5.1",
    "apollo-client": "^2.5.1",
    "apollo-link-http": "^1.5.14",
    "graphql": "^14.3.0",
    "postcss-cssnext": "^3.1.0",
    "register-service-worker": "^1.6.2",
    "v-click-outside": "^2.1.3",
    "vue": "^2.6.10",
    "vue-apollo": "^3.0.0-beta.28",
    "vue-pull-refresh": "^0.2.7",
    "vue-router": "^3.0.6",
    "vue2-google-maps": "^0.10.6",
    "vue2-hammer": "^2.1.2",
    "vuex": "^3.1.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.7.0",
    "@vue/cli-plugin-eslint": "^3.7.0",
    "@vue/cli-plugin-pwa": "^3.7.0",
    "@vue/cli-plugin-unit-jest": "^3.7.0",
    "@vue/cli-service": "^3.7.0",
    "@vue/eslint-config-standard": "^4.0.0",
    "@vue/test-utils": "^1.0.0-beta.29",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^24.8.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-graphql": "^3.0.3",
    "eslint-plugin-prettier": "^3.1.0",
    "graphql-tag": "^2.10.1",
    "lint-staged": "^8.1.7",
    "vue-template-compiler": "^2.6.10",
    "icon-font-generator": "^2.1.10"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/standard"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "postcss-cssnext": {
        "features": {
          "autoprefixer": false,
          "customProperties": {
            "variables": {
              "color-base": "#2c332d",
              "color-black": "#30322f",
              "color-white": "#ffffff",
              "color-blue": "#67bcf2",
              "color-yellow": "#eaa74c",
              "color-green": "#48ba2b",
              "color-red": "#ff6666",
              "border-radius-base": "6px",
              "font-family-primary": "Prompt, Helvetica, Arial, sans-serif",
              "font-family-normal": "'EB Garamond'",
              "color-background": "#fafbf1"
            }
          },
          "customMedia": {
            "extensions": {
              "--sm-viewport": "(min-width: 24em)",
              "--md-viewport": "(min-width: 46.8em)",
              "--lg-viewport": "(min-width: 50em)",
              "--xl-viewport": "(min-width: 60em)"
            }
          }
        }
      }
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.vue$": "vue-jest",
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "snapshotSerializers": [
      "jest-serializer-vue"
    ],
    "testMatch": [
      "<rootDir>/(tests/unit/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx))"
    ]
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
